<com.taotianhua.covidnews.ui.epidemic.entity.search.EntityListItemView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="6dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >


            <TextView
                android:id="@+id/entity_name_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="#000000"
                android:lines="1"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="2dp"
                android:text="@string/sampel_label"
                android:scrollbarSize="22sp"

                />

        <ImageView
            android:id="@+id/imageView0"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_alignTop="@id/entity_name_view"
            android:layout_alignBottom="@id/entity_name_view"
            android:layout_toEndOf="@id/entity_name_view"
            android:contentDescription="hot0"
            android:visibility="invisible"

            app:srcCompat="@drawable/fire_80" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_alignTop="@id/entity_name_view"
            android:layout_alignBottom="@id/entity_name_view"
            android:layout_toEndOf="@id/imageView0"

            android:contentDescription="hot1"

            android:visibility="invisible"
            app:srcCompat="@drawable/fire_80" />


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/entity_name_view"
    android:orientation="vertical"
    >
    <ImageView
        android:id="@+id/entity_image_view"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:adjustViewBounds="true"
        android:contentDescription="The picture of entity"
        android:minHeight="0dp"

        />

    <TextView
        android:id="@+id/entity_description_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sample_description"
        android:maxLines="4"
        android:textSize="16sp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="4dp"

        />


</LinearLayout>





    </RelativeLayout>

</com.taotianhua.covidnews.ui.epidemic.entity.search.EntityListItemView>